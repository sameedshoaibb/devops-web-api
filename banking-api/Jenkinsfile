pipeline {
    agent any

    options {
        skipDefaultCheckout(true)
    }

    environment {
        IMAGE_NAME = 'sameedshoaib1/banking-api'
        IMAGE_TAG = 'v1.0.20'
        REPO_URL = 'https://github.com/sameedshoaibb/devops-web-api.git'
    }
    triggers {
        githubPush()
    }

    stages {
        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Clone Repository') {
            steps {
                git branch: 'main', url: "${REPO_URL}"
            }
        }

        stage('Build Docker Image') {
            steps {
                sh "pwd"
                sh "ls -al"
                sh "ls -al banking-api || echo 'banking-api folder not found'"
                sh "cat banking-api/Dockerfile || echo 'Dockerfile not found'"
                dir('banking-api') {
                    sh "pwd"
                    sh "ls -al"
                    sh "docker build -t ${IMAGE_NAME}:${IMAGE_TAG} ."
                }
            }
        }

        stage('Test Health Endpoint') {
            steps {
                sh "docker rm -f banking-api-test || true"
                sh "docker run -d --name banking-api-test -p 4000:4000 ${IMAGE_NAME}:${IMAGE_TAG}"
                sh "sleep 5"
                sh "curl -f http://localhost:4000/health"
                sh "docker stop banking-api-test && docker rm banking-api-test"
            }
        }

        stage('Push to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    sh 'echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin'
                    sh "docker push ${IMAGE_NAME}:${IMAGE_TAG}"
                }
            }
        }

        stage('Deploy') {
            steps {
                dir('banking-api') {
                    sh "./scripts/deploy/deploy.sh prod"
                    sh "sleep 55"
                }
            }
        }

        stage('Verify Deployment') {
            steps {
                                sh "kubectl get all -n banking-api"
                                sh "kubectl get endpoints -n banking-api"
                                sh "kubectl get pods -n banking-api -o wide"
                                echo 'Testing /admin/account endpoint:'
                                sh '''
                                    ADMIN_RESPONSE=$(curl -s -w "\n%{http_code}" -X POST http://localhost:8080/admin/account \
                                        -H "x-api-key: sameed" \
                                        -H "Content-Type: application/json" \
                                        -d '{"accountId":"test1","password":"pass123"}')
                                    echo "$ADMIN_RESPONSE"
                                    ADMIN_STATUS=$(echo "$ADMIN_RESPONSE" | tail -n1)
                                    if [ "$ADMIN_STATUS" -ne 200 ]; then
                                        echo "Admin account endpoint failed!"
                                        exit 1
                                    fi
                                '''
                                echo 'Testing /account/test1/info endpoint:'
                                sh '''
                                    INFO_RESPONSE=$(curl -s -w "\n%{http_code}" -X POST http://localhost:8080/account/test1/info \
                                        -H "Content-Type: application/json" \
                                        -d '{"password":"pass123"}')
                                    echo "$INFO_RESPONSE"
                                    INFO_STATUS=$(echo "$INFO_RESPONSE" | tail -n1)
                                    if [ "$INFO_STATUS" -ne 200 ]; then
                                        echo "/account/test1/info endpoint failed!"
                                        exit 1
                                    fi
                                '''
            }
        }
    }

    post {
        always {
            sh "docker rmi ${IMAGE_NAME}:${IMAGE_TAG} || true"
        }
    }
}
